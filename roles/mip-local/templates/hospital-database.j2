---

ldsm_db_cpus: {{ (target_cpus|float / 16.0) | round(1, 'floor') }}
ldsm_db_mem: {{ (target_mem_mb|float / 16.0) | round(0, 'floor') }}

postgresraw_ui_cpus: {{ (target_cpus|float / 16.0) | round(1, 'floor') }}
postgresraw_ui_mem: {{ (target_mem_mb|float / 16.0) | round(0, 'floor') }}

{% if docker_force_add_host %}
postgresraw_ui_docker_parameters:
  - key: 'add-host'
    value: "{{ server_fqdn }}:{{ server_ip_address }}"
  - key: 'add-host'
    value: "{{ server_hostname }}:{{ server_ip_address }}"
{% endif %}

