---

# This file supplies the variables for a particular host.
# For real environments, this file should be encrypted using git-crypt, so it
# is safe to store secrets such as passwords in it and then commit the file in a
# Git repository

fqdn: "{{ server_fqdn }}"
hostname: "{{ server_hostname }}"
ip_address: "{{ server_ip_address }}"

slack_token: ''

ldsm_db_password: "{{ lookup('password', '/dev/null length=15') }}"
ldsm_db_admin_password: "{{ lookup('password', '/dev/null length=15') }}"

research_db_password: "{{ lookup('password', '/dev/null length=15') }}"
research_db_admin_password: "{{ lookup('password', '/dev/null length=15') }}"

meta_db_password: "{{ lookup('password', '/dev/null length=15') }}"
woken_db_password: "{{ lookup('password', '/dev/null length=15') }}"
portal_db_password: "{{ lookup('password', '/dev/null length=15') }}"

airflow_db_password: "{{ lookup('password', '/dev/null length=15') }}"
data_catalog_db_password: "{{ lookup('password', '/dev/null length=15') }}"
i2b2_capture_db_password: "{{ lookup('password', '/dev/null length=15') }}"
i2b2_mip_db_password: "{{ lookup('password', '/dev/null length=15') }}"
mipmap_db_password: "{{ lookup('password', '/dev/null length=15') }}"

{% if gitlab_com_login and gitlab_com_password %}
meta_db_docker_registries:
  - url: registry.gitlab.com
    username: "{{ gitlab_com_login }}"
    password: "{{ gitlab_com_password }}"

research_db_docker_registries:
  - url: registry.gitlab.com
    username: "{{ gitlab_com_login }}"
    password: "{{ gitlab_com_password }}"
{% endif %}
