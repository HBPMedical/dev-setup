---

woken_features_from: '{% if mip_building_blocks == 'all' %}ldsm-db{% else %}research-db{% endif %}'
portal_backend_features_from: '{% if mip_building_blocks == 'all' %}ldsm-db{% else %}research-db{% endif %}'
portal_backend_security_enabled: no

research_db_companion_bases:
  - meta-db
  - woken-db
  - portal-db
  - airflow-db
  - data-catalog-db
  - i2b2-capture-db
  - i2b2-mip-db
  - mipmap-db

{% if gitlab_com_login and gitlab_com_password %}
# Setup the standard research datasets
setup_standard_research_datasets: yes
{% endif %}
# Setup the standard metadata
setup_standard_metadata: yes

portal_frontend_base_url: "{{ portal_frontend_base_url }}"
portal_frontend_virtual_host: "{{ portal_frontend_base_url | regex_replace('^.*://(.*)([:/].*)?$', '\\1') }}"
{% raw -%}
airflow_web_port: 4080
airflow_web_base_url: "http://{{ fqdn | default(ansible_fqdn) }}:{{ airflow_web_port }}"
{%- endraw %}
